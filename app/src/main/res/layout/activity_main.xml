<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/load_dex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Dex"
        android:onClick="onLoadDex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inject Dex"
        android:onClick="onInjectDex"
        app:layout_constraintLeft_toLeftOf="@id/load_dex"
        app:layout_constraintTop_toBottomOf="@id/load_dex"
        app:layout_constraintRight_toRightOf="@id/load_dex"/>

</androidx.constraintlayout.widget.ConstraintLayout>